---
import Head from '@/components/Head.astro';
import PageFooter from '@/components/PageFooter.astro';
import PageMenu from '@/components/PageMenu.astro';

export interface Props {
  title: string;
  description: string;
  home?: boolean
}

import '@/assets/css/main.css';
const {title, description, home = false} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Head title={title} description={description} />
  </head>
  <body>
    <div class="flex flex-col grow px-4 md:mx-auto md:w-full md:max-w-3xl">
      <PageMenu home={home} />
      <main
        class="grow pt-8 sm:pt-16 lg:pt-20 prose antialiased prose-img:mt-0 prose-p:text-xl dark:prose-invert prose-li:text-lg after:clear-left after:table"
      >
        <slot />
      </main>
    </div>
    <PageFooter />
  </body>
</html>
