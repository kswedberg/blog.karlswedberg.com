---
import { Image } from '@astrojs/image/components';
import {config} from '@/utils/config.mjs';
---

<div
  class='mt-6 text-left font-sans mb-6 md:max-w-3xl mx-4 md:mx-auto flex items-center justify-between'
>
  <a href="/" class="text-2xl sm:text-3xl font-semibold text-black dark:text-white tracking-widest flex gap-3 items-center">
