---
const { tags, class: className = 'text-sm' } = Astro.props;
---

{
  tags && Array.isArray(tags) && (
    <ul class={className}>
      {tags.map((tag) => (
        <li class="bg-gray-200 rounded-sm dark:bg-slate-700 inline-block mr-2 py-0.5 px-2 lowercase font-medium">
          <a
            href={`/topic/${tag}`}
            class="text-muted dark:text-slate-300 hover:text-primary dark:hover:text-gray-200"
          >
            {tag}
          </a>
        </li>
      ))}
    </ul>
  )
}
