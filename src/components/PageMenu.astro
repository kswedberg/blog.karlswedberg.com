---
import {config} from '@/utils/config.mjs';
import SiteSearch from '../vue/site-search.vue';
import Icon from '@/components/Icon.astro';

const {home} = Astro.props;

---
<header>
  <div
    class="mt-6 text-left font-sans flex items-center justify-between gap-6">
    <a href="/" class="flex gap-3 items-center">
      <div class="h-16 w-16 mx-auto">
        <Icon icon="logo" />
      </div>
      <div class="flex flex-col justify-center">
        <div class="text-2xl sm:text-3xl font-semibold text-black dark:text-white sm:tracking-widest">{config.siteTitle}</div>
        <span class="text-sm md:text-xl font-light text-gray-700 dark:text-slate-300">{config.description}</span>
      </div>
    </a>
    <div class="text-right">
      <a href="/about/" class="link">About</a>
      <SiteSearch client:only="vue" />
    </div>

  </div>


</header>
