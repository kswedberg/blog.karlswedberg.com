---
import {config} from '@/utils/config.mjs';
const { home } = Astro.props;
import { Image } from '@astrojs/image/components';
---

<div
  class="mt-6 text-left font-sans flex items-center justify-between gap-6">
  <a href="/" class="flex gap-3 items-center">
    <Image src="src/assets/img/good-dog.png" alt="" class="h-12 w-12 mx-auto" height={48} width={48} />
    <div class="flex flex-col justify-center">
      <div class="text-2xl sm:text-3xl font-semibold text-black dark:text-white tracking-widest">{config.siteTitle}</div>
      <span class="text-sm md:text-xl font-light text-gray-700 dark:text-slate-300">{config.description}</span>
    </div>
  </a>
  <a href="/about" class="link">About</a>
</div>
